<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://www.appserver.io/appserver">

    <display-name>appserver.io REST API</display-name>
    <description>Webapp that provides the appserver.io API</description>

    <servlet>
        <description><![CDATA[Returns the Virtual Host configuration data]]></description>
        <display-name>VirtualHostServlet</display-name>
        <servlet-name>VirtualHostServlet</servlet-name>
        <servlet-class>\AppserverIo\Apps\Api\Servlets\VirtualHostServlet</servlet-class>
    </servlet>
    
    <servlet>
        <description><![CDATA[Returns the container configuration data]]></description>
        <display-name>ContainerServlet</display-name>
        <servlet-name>ContainerServlet</servlet-name>
        <servlet-class>\AppserverIo\Apps\Api\Servlets\ContainerServlet</servlet-class>
    </servlet>
    
    <servlet>
        <description><![CDATA[Returns the app configuration data]]></description>
        <display-name>AppServlet</display-name>
        <servlet-name>AppServlet</servlet-name>
        <servlet-class>\AppserverIo\Apps\Api\Servlets\AppServlet</servlet-class>
    </servlet>
    
    <servlet>
        <description><![CDATA[Returns the app's thumbnail]]></description>
        <display-name>ThumbnailServlet</display-name>
        <servlet-name>ThumbnailServlet</servlet-name>
        <servlet-class>\AppserverIo\Apps\Api\Servlets\ThumbnailServlet</servlet-class>
    </servlet>
    
    <servlet>
        <description><![CDATA[Returns the persistence unit configuration data]]></description>
        <display-name>PersistenceUnitServlet</display-name>
        <servlet-name>PersistenceUnitServlet</servlet-name>
        <servlet-class>\AppserverIo\Apps\Api\Servlets\PersistenceUnitServlet</servlet-class>
    </servlet>
    
    <servlet>
        <description><![CDATA[Returns the application configuration data]]></description>
        <display-name>ApplicationServlet</display-name>
        <servlet-name>ApplicationServlet</servlet-name>
        <servlet-class>\AppserverIo\Apps\Api\Servlets\ApplicationServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>VirtualHostServlet</servlet-name>
        <url-pattern>/virtualHosts.do*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ContainerServlet</servlet-name>
        <url-pattern>/containers.do*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>AppServlet</servlet-name>
        <url-pattern>/apps.do*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ThumbnailServlet</servlet-name>
        <url-pattern>/thumbnails.do*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>PersistenceUnitServlet</servlet-name>
        <url-pattern>/persistenceUnits.do*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ApplicationServlet</servlet-name>
        <url-pattern>/applications.do*</url-pattern>
    </servlet-mapping>

</web-app>